---
import { Image } from 'astro:assets';
import logoImage from '../assets/logo.png';
---

<header class="border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50">
  <div class="container flex h-16 items-center px-4 sm:px-6">
    <a href={import.meta.env.BASE_URL} class="flex items-center gap-2">
      <Image src={logoImage} alt="Cygint" width={32} height={32} class="h-8 w-8" />
      <span class="font-bold text-xl">Cygint</span>
    </a>
    <nav class="ml-auto flex gap-4 sm:gap-6">
      <a href={`${import.meta.env.BASE_URL}#platform`} class="text-sm font-medium hover:text-primary">Platform</a>
      <a href={`${import.meta.env.BASE_URL}#services`} class="text-sm font-medium hover:text-primary">Services</a>
      <a href={`${import.meta.env.BASE_URL}case-studies`} class="text-sm font-medium hover:text-primary">Case Studies</a>
      <a href={`${import.meta.env.BASE_URL}#pricing`} class="text-sm font-medium hover:text-primary">Pricing</a>
      <a href={`${import.meta.env.BASE_URL}#contact`} class="text-sm font-medium hover:text-primary">Contact</a>
    </nav>
  </div>
</header>