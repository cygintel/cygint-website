---
// Fetch featured case studies from static JSON
let featuredCaseStudies = [];
try {
  const response = await fetch('http://localhost:5000/api/case-studies/featured?limit=3');
  featuredCaseStudies = await response.json();
} catch (error) {
  // Fallback to static JSON file for production deployments
  const staticDataResponse = await fetch(new URL('/data/featured-case-studies.json', import.meta.url));
  featuredCaseStudies = await staticDataResponse.json();
}
---

<section class="py-20 bg-card">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Success Stories</h2>
      <p class="text-xl text-muted-foreground">
        Discover how organizations have strengthened their security posture with Cygint.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredCaseStudies.map((study) => (
        <div class="bg-background rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 flex flex-col h-full">
          <div class="h-40 bg-muted relative overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center bg-primary/10">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-primary/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
          </div>
          
          <div class="p-6 flex-1 flex flex-col">
            <div class="mb-2">
              <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary/10 text-primary">
                {study.industry}
              </span>
            </div>
            
            <h3 class="text-xl font-bold mb-2">{study.title}</h3>
            
            <p class="text-foreground text-sm line-clamp-3 flex-1 mb-4">
              {study.challenge}
            </p>
            
            <a 
              href={`/case-studies/${study.id}`} 
              class="inline-flex items-center text-sm font-medium text-primary hover:underline mt-auto"
            >
              Read case study
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="/case-studies" 
        class="inline-flex items-center px-6 py-3 rounded-md border border-input bg-background hover:bg-muted transition-colors"
      >
        View all case studies
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</section>