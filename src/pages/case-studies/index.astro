---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Static case studies data
const caseStudies = [
  {
    id: 1,
    title: "Securing Critical Infrastructure",
    clientName: "EnergyCorp International",
    industry: "Energy",
    challenge: "EnergyCorp International faced sophisticated cyber threats targeting their SCADA systems across 15 power generation facilities. Their legacy security infrastructure couldn't detect modern APTs, putting critical infrastructure at risk.",
    solution: "Cygint implemented our enterprise attack surface management platform with specialized OT/ICS monitoring capabilities. We deployed custom sensors and integrated with existing industrial control systems.",
    results: "Detected and neutralized 3 active threat actors within the first month. Improved visibility across 5,000+ OT assets. Reduced mean time to detect threats by 76%.",
    imageUrl: "/case-studies/energy.svg",
    tags: ["Energy", "Critical Infrastructure", "OT/ICS Security"],
    featured: "true",
    createdAt: "2025-04-01T00:00:00.000Z",
    slug: "critical-infrastructure"
  },
  {
    id: 2,
    title: "Healthcare Security Transformation",
    clientName: "MediCare Systems",
    industry: "Healthcare",
    challenge: "MediCare Systems struggled with securing a complex network of medical IoT devices across 50+ healthcare facilities. They needed visibility into thousands of connected medical devices while ensuring HIPAA compliance and minimal disruption to patient care.",
    solution: "Cygint deployed its attack surface management platform with specialized healthcare configurations. We integrated with their existing security tools and implemented a non-intrusive scanning protocol safe for medical devices.",
    results: "Discovered 340+ previously unknown connected devices. Implemented security controls that reduced data breach risk by 68%. Automated compliance reporting saved 20+ hours of staff time weekly.",
    imageUrl: "/case-studies/healthcare.svg",
    tags: ["Healthcare", "IoT Security", "Compliance"],
    featured: "true",
    createdAt: "2025-03-02T00:00:00.000Z",
    slug: "healthcare-security"
  },
  {
    id: 3,
    title: "Financial Services Threat Management",
    clientName: "Global Banking Corp",
    industry: "Financial Services",
    challenge: "Global Banking Corp needed to secure their digital infrastructure spanning 200+ branches and 50+ countries. They faced regulatory challenges, sophisticated fraud attempts, and had limited visibility into their expanding attack surface.",
    solution: "Cygint's platform was deployed with custom financial services ruleset. We integrated threat intelligence feeds specific to banking threats and implemented continuous monitoring of all internet-facing assets.",
    results: "85% improvement in vulnerability remediation speed. Identified and secured 120+ shadow IT assets. Blocked 23 sophisticated attack attempts targeting customer data.",
    imageUrl: "/case-studies/financial.svg",
    tags: ["Financial Services", "Fraud Prevention", "Compliance"],
    featured: "true",
    createdAt: "2025-02-15T00:00:00.000Z",
    slug: "financial-services"
  }
];

// Group case studies by industry for filtering
const industries = [...new Set(caseStudies.map(study => study.industry))];
---

<Layout title="Case Studies | Cygint Cybersecurity">
  <Header />
  <main>
    <section class="bg-card py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Case Studies</h1>
          <p class="text-xl text-muted-foreground mb-8">
            Explore how organizations across various industries have strengthened their security posture and protected critical assets with Cygint.
          </p>
        </div>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="mb-12">
          <div class="flex flex-wrap gap-3">
            <button 
              class="filter-btn active px-4 py-2 rounded-full bg-primary text-primary-foreground" 
              data-industry="all"
            >
              All Industries
            </button>
            {industries.map(industry => (
              <button 
                class="filter-btn px-4 py-2 rounded-full bg-muted text-muted-foreground hover:bg-muted/80" 
                data-industry={industry}
              >
                {industry}
              </button>
            ))}
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="case-studies-grid">
          {caseStudies.map((study) => (
            <div 
              class="case-study-card bg-card rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow" 
              data-industry={study.industry}
            >
              <div class="h-48 bg-muted relative overflow-hidden">
                <div class="absolute inset-0 bg-primary/10 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-primary/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
              </div>
              <div class="p-6">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium px-2.5 py-0.5 rounded bg-primary/10 text-primary">
                    {study.industry}
                  </span>
                  {study.featured === "true" && (
                    <span class="text-xs font-medium px-2 py-0.5 rounded bg-accent/10 text-accent-foreground">
                      Featured
                    </span>
                  )}
                </div>
                <h3 class="text-xl font-bold mb-2">{study.title}</h3>
                <p class="text-foreground line-clamp-3 mb-4">
                  {study.challenge}
                </p>
                <a 
                  href={`/case-studies/${study.slug}`} 
                  class="inline-flex items-center font-medium text-primary hover:underline"
                >
                  Read case study
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  // Client-side filtering
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const caseStudyCards = document.querySelectorAll('.case-study-card');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        filterButtons.forEach(btn => btn.classList.remove('active', 'bg-primary', 'text-primary-foreground'));
        filterButtons.forEach(btn => btn.classList.add('bg-muted', 'text-muted-foreground'));
        
        // Add active class to clicked button
        button.classList.add('active', 'bg-primary', 'text-primary-foreground');
        button.classList.remove('bg-muted', 'text-muted-foreground');
        
        const industry = button.getAttribute('data-industry');
        
        // Show/hide case studies based on filter
        caseStudyCards.forEach(card => {
          if (industry === 'all' || card.getAttribute('data-industry') === industry) {
            card.style.display = '';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>