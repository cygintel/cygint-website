---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Features from '../components/sections/Features.astro';
import ThreatDetection from '../components/sections/ThreatDetection.astro';
---

<Layout title="Product - Cygint Cybersecurity Platform">
  <Header />
  <main>
    <!-- Hero Section for Product -->
    <section class="py-16 md:py-24">
      <div class="container px-4 md:px-6">
        <div class="text-center max-w-[900px] mx-auto space-y-6">
          <div class="inline-block rounded-lg bg-muted px-3 py-1 text-sm">Product</div>
          <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
            Advanced Cybersecurity Platform
          </h1>
          <p class="mx-auto max-w-[700px] text-muted-foreground text-lg md:text-xl">
            Comprehensive attack surface management and threat detection platform designed to protect your digital assets and infrastructure.
          </p>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <Features />

    <!-- Threat Detection Section -->
    <ThreatDetection />
  </main>
  <Footer />
</Layout>
